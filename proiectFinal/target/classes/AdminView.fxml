<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.AdminController" stylesheets="@/styles.css" styleClass="root">
    <Label text="Admin Panel"/>
    <TextField fx:id="nameField" promptText="Name"/>
    <TextField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="roleField" promptText="Role"/>
    <Button text="Add User" onAction="#handleAddUser"/>
    <Button text="Update User" onAction="#handleUpdateUser"/>
    <Button text="Delete User" onAction="#handleDeleteUser"/>
    <ListView fx:id="userListView"/>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
